## Before you begin, firstly update and upgrade the system.
sudo apt update & sudo apt upgrade
## Install git, pip and all other necessary tools and libraries required to build Odoo dependencies
sudo apt install git
sudo apt install python3-pip
sudo apt install build-essential wget python3-dev python3-venv python3-wheel libxslt-dev libzip-dev libldap2-dev libsasl2-dev python3-setuptools node-less

## Firstly download the pycharm from pycharm download
sudo apt install snapd snapd-xdg-open
sudo snap install pycharm-community --classic

## directory of the pycharm folder and type 'ls' to see the files in it.run the
./pycharm.sh

## Install the postgres
sudo apt-get update
sudo apt-get install postgresql

## Login to postgres
sudo â€“su postgres
or, sudo su - postgres

## Create a user called odoo and assign its role
createuser --createdb --username postgres --no-createrole --no-superuser --pwprompt odoo
## Give a password
## To see the Postgres interpreter
psql
##  Change the user to superuser
ALTER USER odoo WITH SUPERUSER;
## to exit use
\q ------>hit enter
exit ------>hit enter


